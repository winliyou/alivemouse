{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "alive_mouse",
        "width": 400,
        "height": 300,
        "label": "main",
        "url": "index.html",
        "minimizable": true,
        "visible": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": [
        "msi"
      ],
      "identifier": "com.lsyb.livemouse",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}