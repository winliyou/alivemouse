{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "alive_mouse",
    "version": "1.0.3"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "title": "alive_mouse",
      "menuOnLeftClick": false
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "alive_mouse",
        "label": "main",
        "width": 400,
        "height": 300,
        "url": "/",
        "minimizable": true,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true
      },
      {
        "title": "i'm here!",
        "label": "mouse_position",
        "url": "/FindMouse",
        "width": 120,
        "height": 120,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "nsis",
        "deb"
      ],
      "identifier": "com.lsyb.livemouse",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}